{% extends "./base.html.twig" %}

{% block body %}
<div class="w-full md:w-4/5 lg:w-3/5 xl:w-2/5 m-auto pt-20 pb-8">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-center mb-8">
        Create Movie
    </h1>

    {{ form_start(form, {'attr': {'class': 'mt-8'}}) }}

    <div class="grid grid-cols-1 gap-y-4">
        {{ form_row(form.title, {'attr': {'class': 'w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 focus:outline-none focus:border-blue-500'}}) }}

        {{ form_row(form.releaseYear, {'attr': {'class': 'w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 focus:outline-none focus:border-blue-500'}}) }}

        {{ form_row(form.description, {'attr': {'class': 'w-full h-32 px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 focus:outline-none focus:border-blue-500'}}) }}
    
        {{ form_row(form.imagePath, {'attr': {'class': 'w-full px-4 py-3 rounded-lg bg-gray-100 border border-gray-200 focus:outline-none focus:border-blue-500'}}) }}
    
    </div>

    <button    
        type="submit"
        class="mt-10 w-full bg-blue-500 text-white text-lg font-semibold py-3 rounded-3xl transition duration-300 hover:bg-blue-600 focus:outline-none focus:bg-blue-600">
        Submit Movie
    </button>

    {{ form_end(form) }}
</div>
{% endblock %}
