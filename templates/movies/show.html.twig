{% extends "./base.html.twig" %}

{% block body %}
    <div class="sm:w-3/5 w-4/5 mx-auto">
        <h1 class="pt-20 sm:text-5xl md:text-7xl text-4xl font-bold text-center">
            {{ movie.title }}
        </h1>

        <div class="py-6 text-center">
            <div class="inline-block">
                <h2 class="font-bold text-lg">
                    Created by: Dinko
                </h2>

                <p class="text-sm text-gray-600">
                   4 min. read
                </p>
            </div>
        </div>

        <div class="flex items-center justify-center">
            <img
                src="{{ movie.imagePath }}"
                class="rounded-xl w-1/3 mx-4 shadow-xl"
                alt=""
            />
            <div class="flex-grow px-4">
                <p class="text-lg text-gray-800">
                    {{ movie.description }}
                </p>
            </div>
        </div>

        {% if app.user and movie.userId == app.user.id %}
            <div class="flex justify-center mt-8">
                <a 
                    href="/movies/edit/{{ movie.id }}"
                    class="bg-green-500 text-white font-bold py-2 px-4 rounded transition-all hover:bg-green-600">
                    Edit Movie
                </a>

                <a 
                    href="/movies/delete/{{ movie.id }}"
                    class="bg-red-500 text-white font-bold py-2 px-4 ml-4 rounded transition-all hover:bg-red-600">
                    Delete Movie
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
